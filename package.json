{
  "name": "markdown-auto-bullets",
  "author": "Jason Lonsberry",
  "displayName": "Markdown Automatic Bullet Points",
  "description": "Automatically add bullet points when editing in Markdown.",
  "keywords": [
    "auto",
    "automated",
    "bullets",
    "list",
    "md"
  ],
  "license": "SEE LICENSE IN ./LICENSE",
  "publisher": "jason-lonsberry",
  "repository": {
    "type": "git",
    "url": "https://github.com/transce080/vscode-markdown-auto-bullets/"
  },
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onDidChangeActiveTextEditor",
    "onDidOpenTextDocument",
    "onLanguage:markdown"
  ],
  "browser": "./src/extension.js",
  "main": "./src/extension.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "build": "mkdir -p deploy && npx vsce package --no-dependencies && mv *.vsix deploy/"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
